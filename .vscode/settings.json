    //"terminal.integrated.shell.windows": "D:\\dev\\Git\\bin\\bash.exe",
    // Bash on Ubuntu (on Windows)
    // "terminal.integrated.shell.windows": "C:\\Windows\\sysnative\\bash.exe",
