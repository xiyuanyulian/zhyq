{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
        "@shared": [ "app/shared" ],
        "@shared/*": [ "app/shared/*" ],
        "@core": [ "app/core/" ],
        "@core/*": [ "app/core/*" ],
        "@testing": [ "testing/" ],
        "@testing/*": [ "testing/*" ],
        "@env": [ "environments/" ],
        "@env/*": [ "environments/*" ],
        "@delon": [ "delon/" ],
        "@delon/*": [ "delon/*" ],
        "@biz": [ "app/biz/" ],
        "@biz/*": [ "app/biz/*" ],
        "@lib": [ "../lib/" ],
        "@lib/*": [ "../lib/*" ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
